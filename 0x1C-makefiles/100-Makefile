CC = gcc
SRC = school.c main.c
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

# Rule to compile .c files into .o files
%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

# Linking rule
$(NAME): $(SRC:.c=.o)
	$(CC) $^ -o $@

clean:
	-$(RM) *~ $(NAME) $(SRC:.c=.o)

oclean:
	-$(RM) $(SRC:.c=.o)

fclean: clean oclean

re: fclean all
